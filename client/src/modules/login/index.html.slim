            input.form-control(
              type="text"
              name="username"
              ng-model="credentials.username"
              required=""
              ng-enter="login(loginForm)"
            )


          .form-group
            label Password
            input.form-control(
              type="text"
              name="password"
              ng-model="credentials.password"
              required=""
              ng-enter="login(loginForm)"
            )

      .modal-footer
        .row
          .col-md-12
            .btn-group.pull-right
              a.btn.btn-default ng-click="openModal = false" Cancel
