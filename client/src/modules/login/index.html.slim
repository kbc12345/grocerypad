.login-container
  .row
    .col-md-4.col-md-offset-4
      .panel
        .panel-heading Login
        .panel-body
          form name="loginForm"

            .form-group
              input.form-control(
                type="text"
                name="username"
                ng-model="credentials.email"
                required=""
                ng-enter="login(loginForm)"
                placeholder="Username"
              )


            .form-group
              input.form-control(
                type="password"
                name="password"
                ng-model="credentials.password"
                required=""
                ng-enter="login(loginForm)"
                placeholder="Password"
              )

          .panel-footer
            a.btn.btn-primary.btn-block ng-click="authenticate('google')"  href="#" Login

